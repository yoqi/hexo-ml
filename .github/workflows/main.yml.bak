name: Hexo Blog CI

on:
  push:
    branches: [ master , ql.blog ]
  pull_request:
    branches: [ master , ql.blog ]
jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        node-version: [10.x]
    steps:

    - uses: actions/checkout@v2
      with:
        submodules: true
    
    - name: set node.js
      uses: actions/setup-node@v1
      with:
        node-version: ${{ matrix.node-version }}

    - name:  Git 
      env:
        ACTION_DEPLOY_KEY: ${{ secrets.ACTION_DEPLOY_KEY }}
      run: |
        mkdir -p ~/.ssh/
        echo "$ACTION_DEPLOY_KEY" > ~/.ssh/id_rsa
        cat ~/.ssh/id_rsa
        chmod 600 ~/.ssh/id_rsa
        ssh-keyscan github.com >> ~/.ssh/known_hosts
        git config --global user.name "liuyuqi-travis"
        git config --global user.email "liuyuqi.gov@msn.cn"

    - name: Cache node modules
      uses: actions/cache@v1
      id: cache
      with:
        path: node_modules
        key: ${{ runner.os }}-node-${{ hashFiles('**/package-lock.json') }}
        restore-keys: |
          ${{ runner.os }}-node-
    - name: Install Dependencies # step3 name
      if: steps.cache.outputs.cache-hit != 'true'
      run: yarn
      
    - name: Pre do
      run: |
        git checkout ql.blog
        git submodule update --progress --init -- "themes/diaspora"
        npm i -g hexo-cli

    - name: Deploy blog
      run: |
        hexo clean
        hexo g
        cd ./public
        git init
        git add --all .
        git commit -m "Action CI Auto Builder"
        git push --quiet --force git@github.com:yoqi/hexo-ml.git master:gh-pages